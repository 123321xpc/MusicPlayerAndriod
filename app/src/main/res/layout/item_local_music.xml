<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_item_height">

    <ImageView
        android:id="@+id/music_item_img"
        android:layout_width="@dimen/music_item_height"
        android:layout_height="@dimen/music_item_height"
        android:background="@mipmap/music_item_img" />

    <LinearLayout
        android:id="@+id/music_item_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_toRightOf="@+id/music_item_img">

        <LinearLayout
            android:paddingLeft="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="音乐名称" />

            <TextView
                android:id="@+id/music_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="歌手" />
        </LinearLayout>

        <TextView
            android:id="@+id/music_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐大小"
            android:textSize="9sp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />

    </LinearLayout>

    <!-- 下边框 -->
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="1dp"
        android:background="#44000000"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
